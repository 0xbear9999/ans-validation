{
    "extends": "./tsconfig.json",
    "type": "module",
    "esm": true,
    "compilerOptions": {
      "noEmit": false,
      "module": "ESNext",
      "outDir": "dist/esm",
      "declarationDir": "dist/types"
    },
    "rootDir": "./src",
    "include": ["src/**/*.ts"],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts",
    ]
  }